{% extends 'base.html.twig' %}

{% block title %}Training sessions list{% endblock %}

{% block body %}

    <div class="main-content-page session-index-page">

        <div id="title-add">
            <h1>Training Sessions</h1>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('new_session') }}" ><i class="fa-regular fa-calendar-plus"></i></a>
            {% endif %}

        </div>
        
        <div id="top">
            <p>Session's Title</p>
            <p>Starting Date</p>
            <p>Ending Date</p>
            <p>Places</p>
            <p>Remaining Places</p>
            <p>Detail</p>
        </div>

        <div class="session-top" id="current-session-top">

            <h2>Current Sessions</h2>
            <i id="currentUpBtn" class="fa-solid fa-chevron-up"></i>
        </div>

        <div class="session-list" id="current-session-list">
            {% for session in currentSessions  %}
                    <div>
                        <h3><a href="{{ path('show_session', {'id': session.id }) }}"> {{session}}</a></h3>
                        <p>{{session.startDate|date("d.m.Y")}}</p>
                        <p>{{session.endDate|date("d.m.Y")}}</p>
                        <p>{{ session.nbPlacebooked }} / {{session.nbPlaceTotal}}</p>
                        <p>{{ session.nbPlaceRemaining }}</p>
                        <p><a href="{{ path('show_session', {'id': session.id }) }}"> <i class="ri-git-repository-commits-fill"></i></a></p>
                        
                        {# {{ session.students | length }} #}
        
                        {# {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('edit_session', {'id': session.id }) }}">Editer</a>
                            <a href="{{ path('delete_session', {'id': session.id }) }}">Supprimer</a><br>
                        {% endif %} #}
                    </div>
            {% endfor %}                    
        </div>

        <div class="session-top" id="upcoming-session-top">
            <h2>Upcoming Sessions</h2>
            <i id="upcomingUpBtn" class="fa-solid fa-chevron-up"></i>
        </div>

        <div class="session-list" id="upcoming-session-list">
            {% for session in upcomingSessions %}
                <div>
                    <h3> <a href="{{ path('show_session', {'id': session.id }) }}"> {{session}}</a></h3>
                    <p>{{session.startDate|date("d.m.Y")}}</p>
                    <p>{{session.endDate|date("d.m.Y")}}</p>
                    <p>{{ session.nbPlacebooked }} / {{session.nbPlaceTotal}} </p>
                    <p>{{ session.nbPlaceRemaining }}</p>
                    <p><a href="{{ path('show_session', {'id': session.id }) }}"> <i class="ri-git-repository-commits-fill"></i></a></p>
                </div>
        
                    {# {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('edit_session', {'id': session.id }) }}">Editer</a>
                        <a href="{{ path('delete_session', {'id': session.id }) }}">Supprimer</a><br>
                    {% endif %} #}
                    
           
            {% endfor %}
        </div>

        <div id="show-past-sessions-btn">
            <p>Show past sessions</p>
        </div>
      
        <div id="past-sessions-container" style="display:none">

            <div class="session-top" id="past-session-top">
                <h2>Past Sessions</h2>
                <i class="fa-solid fa-chevron-up"></i>
            </div>

            <div class="session-list" id="past-session-list">

                {% for session in pastSessions %}
                    <div>
                        <h3> <a href="{{ path('show_session', {'id': session.id }) }}"> {{session}}</a></h3>
                        <p>{{session.startDate|date("d.m.Y")}}</p>
                        <p>{{session.startDate|date("d.m.Y")}}</p>
                        <p>{{ session.nbPlacebooked }} / {{session.nbPlaceTotal}} </p>
                        <p></p>
                        <p></p>
    
                    </div>
        
                        {# {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('edit_session', {'id': session.id }) }}">Editer</a>
                            <a href="{{ path('delete_session', {'id': session.id }) }}">Supprimer</a><br>
                        {% endif %} #}
        
                   
                {% endfor %}

            </div>

        </div>

        <h3>test</h3>


       
        
    </div>



{% endblock %}


