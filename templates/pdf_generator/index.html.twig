<html>
   
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PDF student detail{% endblock %}</title>
    
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    
        {# Google fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@300;400;500;600&display=swap" rel="stylesheet">
    
        {# Font awesome #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
        {# Remix Icon #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" integrity="sha512-HXXR0l2yMwHDrDyxJbrMD9eLvPe3z3qL3PPeozNTsiHJEENxx8DH2CxmV05iwG0dwoz5n4gQZQyYLUNt1Wdgfg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
       
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('css/studentPage.css')}}">
            <link rel="stylesheet" href="{{asset('css/sessionPage.css')}}">
            <link rel="stylesheet" href="{{asset('css/teacherPage.css')}}">
    
            <link rel="stylesheet" href="{{asset('css/general.css')}}">
        {% endblock %}
    
        {% block javascripts %}
        {% endblock %}


    </head>
    
    
    
   <class id="pdf-content">
            <div class="header">

            </div>

            <div class="student">
                <p>Name: {{student}}</p>
                <p>Sexe: {{student.sexe}}</p>
                <p>Email : {{student.email}}</p>
                <p>Phone : {{student.phoneNumber}}</p>
                <p>City : {{student.city}}</p>
                <p>Birthday : {{student.birthday|date("d.m.Y")}}</p>
                <p>Age : {{student.age}}</p>
            </div>

            <div class="formation">
                <p>Sessions summary :</p>
                <div class="current">
                    <p>Current session/s :</p>
                    {% if currentSessions | length > 0 %}
                        {% for session in currentSessions  %}
                            <div>
                                <p>• {{session}} ( {{session.startDate|date("d.m.Y")}} - {{session.endDate|date("d.m.Y")}} ) </p>
                                
                            </div>
                        {% endfor %}   
                    {% else %}
                        <p>No current session.</p>
                    {% endif %}
                </div>
                <div class="upcoming">
                    <p>Upcoming session/s :</p>
                    {% if upcomingSessions | length > 0 %}
                        {% for session in currentSessions  %}
                            <div>
                                <p>• {{session}} ( {{session.startDate|date("d.m.Y")}} - {{session.endDate|date("d.m.Y")}} ) </p>
                                
                            </div>
                        {% endfor %}   
                    {% else %}
                        <p>No upcoming session.</p>
                    {% endif %}
                </div>
                <div class="past">
                    <p>Past session/s :</p>
                    {% if pastSessions | length > 0 %}
                        {% for session in pastSessions  %}
                            <div>
                                <p>• {{session}} ( {{session.startDate|date("d.m.Y")}} - {{session.endDate|date("d.m.Y")}} ) </p>
                                
                            </div>
                        {% endfor %}   
                    {% else %}
                        <p>No past session.</p>
                    {% endif %}
                </div>
            </div>
   </class>

</html>


